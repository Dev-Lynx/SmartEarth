<Window x:Class="SmartEarth.Demos.Sorting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartEarth.Demos.Sorting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
     
    </Window.Resources>
    <DockPanel>
        <StackPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding StartChangingCommand}" Content="{Binding ChangeButtonText}" Margin="10"/>
            <Button Command="{Binding StartAddCommand}" Content="{Binding AddButtonText}" Margin="10"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding SortedView}">

        </DataGrid>
    </DockPanel>
</Window>
